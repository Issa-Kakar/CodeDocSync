# Test environment variables for CodeDocSync
# This file contains mock API keys for testing purposes

# OpenAI API Key (mock key for testing)
OPENAI_API_KEY=sk-test1234567890abcdef1234567890abcdef1234567890abcdef

# Optional: Other API keys if needed
ANTHROPIC_API_KEY=test-anthropic-key-1234567890
COHERE_API_KEY=test-cohere-key-1234567890

# Test mode flag
CODEDOCSYNC_TEST_MODE=true

# Disable actual API calls in tests
DISABLE_LLM_CALLS=true

# Use local embeddings for tests
USE_LOCAL_EMBEDDINGS=true

# ChromaDB settings for tests
CHROMA_PERSIST_DIRECTORY=.test_chroma_db
CHROMA_COLLECTION_NAME=test_collection

# Cache settings for tests
CACHE_DIR=.test_cache
DISABLE_CACHE=false

# Performance settings for tests
MAX_WORKERS=2
BATCH_SIZE=10
