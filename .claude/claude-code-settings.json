{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": ".venv/Scripts/python.exe scripts/format_file.py ${input.file_path}",
            "condition": "${input.file_path.endsWith('.py') && !input.file_path.includes('syntax_error.py')}",
            "description": "Auto-format Python files after editing"
          }
        ]
      }
    ]
  }
}
